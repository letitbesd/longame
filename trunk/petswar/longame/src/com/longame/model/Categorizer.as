package com.longame.model{	public class Categorizer	{		public var categories:int;				public function Categorizer(initialCategories:Number = 0):void		{			categories = initialCategories;		}				public function add(value:int):void		{			categories |= value;		}				public function remove(value:int):void		{			categories &= (~value);		}				public function has(value:int):Boolean		{			return Boolean(categories & value);		}	}}